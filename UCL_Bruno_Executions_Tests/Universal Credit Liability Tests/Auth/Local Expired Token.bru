meta {
  name: Local - Expired Token
  type: http
  seq: 2
}

post {
  url: http://localhost:8585/application/session/login
  body: json
  auth: none
}

body:json {
  {
    "clientId": "{{$guid}}",
    "authProvider": "PrivilegedApplication",
    "applicationId": "{{$guid}}",
    "applicationName": "Local test client app",
    "enrolments": [],
    "ttl": 1  // Setting an expired token
  }
}

script:pre-request {
  if (bru.getEnvVar("ENVIRONMENT") !== 'local') {
    throw new Error('Environment must be set to Local');
  }
}

script:post-response {
  if (res.status === 201) {
    const authToken = res.getHeader('authorization');
    bru.setVar('expiredToken', authToken);
  } else {
    throw new Error('Failed to generate expired token');
  }
}
